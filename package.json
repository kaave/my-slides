{
    "name": "webpack-hmr",
    "version": "1.0.0",
    "main": "index.js",
    "license": "MIT",
    "scripts": {
        "postinstall": "flow-typed install && rimraf flow-typed/npm/browser-env_*",
        "prestart": "yarn run lint",
        "start": "npm-run-all -p test:watch build:development",
        "prebuild": "npm-run-all -p lint test",
        "build": "rimraf build && yarn run build:production",
        "build:development": "NODE_ENV=development webpack-dev-server",
        "build:production": "NODE_ENV=production webpack",
        "build:check": "yarn run build:production && http-server ./build -p 23000 -o --cors",
        "lint": "npm-run-all -p typecheck lint:scripts lint:styles",
        "lint:scripts": "eslint --ext .js,.jsx source/scripts/",
        "lint:scripts:fix": "eslint --fix --ext .js,.jsx source/scripts/",
        "lint:styles": "stylelint source/**/*.css",
        "test": "NODE_ENV=test ava",
        "test:watch": "NODE_ENV=test ava --watch",
        "typecheck": "flow",
        "flow-typed": "flow-typed"
    },
    "ava": {
        "files": [
            "./source/scripts/**/*.test.{js,jsx}"
        ],
        "source": [
            "./source/scripts/**/*.{js,jsx}"
        ],
        "require": [
          "babel-register",
          "./source/scripts/_test-helper.js"
        ],
        "babel": "inherit"
    },
    "devDependencies": {
        "ava": "^0.18.2",
        "babel-core": "^6.24.0",
        "babel-eslint": "^7.2.1",
        "babel-loader": "^6.4.1",
        "babel-preset-env": "^1.3.2",
        "babel-preset-flow": "^6.23.0",
        "babel-preset-react": "^6.23.0",
        "babel-preset-stage-0": "^6.22.0",
        "babel-register": "^6.24.0",
        "browser-env": "^2.0.28",
        "browser-sync": "^2.18.8",
        "browser-sync-webpack-plugin": "^1.1.4",
        "copy-webpack-plugin": "^4.0.1",
        "css-loader": "^0.28.0",
        "del": "^2.2.2",
        "ejs-compiled-loader": "^1.1.0",
        "eslint": "^3.19.0",
        "eslint-config-airbnb": "^14.1.0",
        "eslint-loader": "^1.7.1",
        "eslint-plugin-ava": "^4.2.0",
        "eslint-plugin-flowtype": "^2.30.4",
        "eslint-plugin-flowtype-errors": "^3.0.3",
        "eslint-plugin-import": "^2.2.0",
        "eslint-plugin-jsx-a11y": "^4.0.0",
        "eslint-plugin-react": "^6.10.3",
        "extract-text-webpack-plugin": "^2.1.0",
        "file-loader": "^0.11.1",
        "flow-bin": "^0.42.0",
        "flow-types": "^1.0.0",
        "flowtype-loader": "^0.2.2",
        "html-webpack-plugin": "^2.28.0",
        "http-server": "^0.9.0",
        "npm-run-all": "^4.0.2",
        "postcss-cssnext": "^2.10.0",
        "postcss-import": "^9.1.0",
        "postcss-loader": "^1.3.3",
        "react-hot-loader": "^1.3.1",
        "rimraf": "^2.6.1",
        "style-loader": "^0.16.1",
        "stylelint": "^7.10.0",
        "stylelint-config-standard": "^16.0.0",
        "stylelint-webpack-plugin": "^0.7.0",
        "uglifyjs-webpack-plugin": "^0.4.0",
        "url-loader": "^0.5.8",
        "webpack": "^2.3.2",
        "webpack-dev-server": "^2.4.2"
    },
    "dependencies": {
        "babel-polyfill": "^6.23.0",
        "normalize.css": "^6.0.0",
        "react": "^15.4.2",
        "react-bem-helper": "^1.3.1",
        "react-dom": "^15.4.2"
    }
}
